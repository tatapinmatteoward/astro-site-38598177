---
// Navigation.astro
---

<nav class="bg-gradient-to-r from-[#10B981] to-[#F59E0B] shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-white hover:text-gray-100 transition-colors">
        FunPetToys Blog
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex gap-6">
        <a href="/" class="text-white font-medium hover:text-gray-100 transition-colors">Home</a>
        <a href="/reviews" class="text-white font-medium hover:text-gray-100 transition-colors">Reviews</a>
        <a href="/blog" class="text-white font-medium hover:text-gray-100 transition-colors">Blog</a>
      </div>
      
      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="text-white text-2xl hover:text-gray-100 focus:outline-none"
          aria-label="Toggle menu"
        >
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation (hidden by default) -->
    <div class="md:hidden mt-4 hidden">
      <div class="flex flex-col gap-3 pb-4">
        <a href="/" class="text-white font-medium hover:text-gray-100 transition-colors py-2">Home</a>
        <a href="/reviews" class="text-white font-medium hover:text-gray-100 transition-colors py-2">Reviews</a>
        <a href="/blog" class="text-white font-medium hover:text-gray-100 transition-colors py-2">Blog</a>
      </div>
    </div>
  </div>
</nav>

<!-- Font Awesome CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
  /* Mobile menu toggle functionality */
  .mobile-menu-toggle:checked ~ div .md\:hidden {
    display: block !important;
  }
</style>